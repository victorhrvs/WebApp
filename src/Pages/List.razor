@page "/list"
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1 class="text-center display-4">Carrinho de Compras </h1>


<div class="card p-3 text-center">
    
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4 p-2">
                <img src="https://firebasestorage.googleapis.com/v0/b/webapp-csharp.appspot.com/o/produto1.png?alt=media&token=c872a7ba-ccb9-4ccd-8573-43eb2d316581" class="img-fluid rounded " alt="..." style="max-height: 254px;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Câmera Nikon</h5>
                    <p class="card-text p-2">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <button type="button" class="btn btn-outline-primary " @onclick="DecrementCount1">-</button>
                        <button type="button" class="btn btn-outline-primary disabled">@currentCount1</button>
                        <button type="button" class="btn btn-outline-primary" @onclick="IncrementCount1">+</button>
                    </div>
                    <p class="card-text p-4">Valor Total: R$@totalProduct1,00</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4 p-2">
                <img src="https://firebasestorage.googleapis.com/v0/b/webapp-csharp.appspot.com/o/produto2.png?alt=media&token=19505beb-2c39-4530-8185-45da4a9cd959" class="img-fluid rounded" alt="..." style="max-height: 254px;">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text  p-2">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <button type="button" class="btn btn-outline-primary" @onclick="DecrementCount2">-</button>
                        <button type="button" class="btn btn-outline-primary disabled">@currentCount2</button>
                        <button type="button" class="btn btn-outline-primary" @onclick="IncrementCount2">+</button>
                    </div>
                    <p class="card-text p-4">Valor Total: R$@totalProduct2,00</p>
                </div>
            </div>
        </div>
    </div>

</div>


@code {
    private int currentCount1 = 1;
    private int priceProduct1 = 1500;
    private int totalProduct1 = 1500;

    private void DecrementCount1()
    {
        currentCount1--;
        totalProduct1 = priceProduct1 * currentCount1;
    }
    private void IncrementCount1()
    {
        currentCount1++;
        totalProduct1 = priceProduct1 * currentCount1;
    }

    private int currentCount2 = 1;
    private int priceProduct2 = 100;
    private int totalProduct2 = 100;

    private void DecrementCount2()
    {
        currentCount2--;
        totalProduct2 = priceProduct2 * currentCount2;
    }
    private void IncrementCount2()
    {
        currentCount2++;
        totalProduct2 = priceProduct2 * currentCount2;
    }
}
